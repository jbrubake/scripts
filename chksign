# abstract: verify a SSH-key signed file
#
# Usage: chksign <filename> <signers email>
#

# shellcheck disable=SC1090
. "$LIBSH"

@import stdio

allowed_signers="$HOME/.ssh/allowed_signers"

test -n "$1" || \
    stdio::die 1 "No filename to check provided. Exiting"

test -n "$2" || \
    stdio::die 1 "No signer email provided. Exiting"

sig="$1.sig"

ssh-keygen -Y verify -f "$allowed_signers" -I "$2" -n file -s "$sig" < "$1"

